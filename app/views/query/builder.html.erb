<div class="main-container">
    <div class="row">
        <div class="col-md-12">
            <h4>Please follow the steps to build your query</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="row clear-dataset" id="div_step_info_dataset">
                <div class="col-md-12">
                    STEP 1 : Select Dataset
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="dropdown clear-dataset">
                      <button class="btn btn-default dropdown-toggle" type="button" id="dd_select_dataset" data-toggle="dropdown">
                        Select
                        <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu" role="menu" aria-labelledby="dd_select_dataset">
                        <%get_datasets.each do |k,v|%>
                           <li role="presentation"><a role="menuitem" tabindex="-1" onclick="QueryBuilder.selected_dataset('<%=v%>')"><%=k%></a></li> 
                        <%end%>
                      </ul>
                    </div>
                    <input type="hidden" id="hdn_qb_dataset" value="">
                    <div id="div_select_dataset" style="display:none" class="done-dataset">
                        <div class="row">
                            <div class="col-md-8 select-body" >

                            </div>
                            <div class="col-md-4">
                                <span class="glyphicon glyphicon-remove" onclick="QueryBuilder.reset_dataset()"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3" id="div_qb_select_class" style="display:none;">
            <div class="row">
                <div class="col-md-12">
                    STEP 2 : Select Class
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                      <div class="col-lg-12">
                        <div class="input-group">
                          <input type="text" class="form-control" placeholder="Type the class name..." id="txt_search_classes">
                          <span class="input-group-btn">
                            <button class="btn btn-default" type="button" onclick="QueryBuilder.search_classes()">Go!</button>
                          </span>
                        </div><!-- /input-group -->
                      </div><!-- /.col-lg-6 -->
                    </div><!-- /.row -->
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-hover" id="tbl_classes_search_result">
                        <thead>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        <div class="col-md-3" style="display:none;">
            <div class="row">
                <div class="col-md-12">
                    STEP 3 : Select Property (Optional)
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    
                </div>
            </div>
        </div>
        <div class="col-md-3 " style="display:none;">
            <div class="row">
                <div class="col-md-12">
                    STEP 4 : Select Inequaly and type in values (Optional)
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('.dropdown-toggle').dropdown();
    });
</script>
